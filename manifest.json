{
  "name": "Movie Subtitles",
  "short_name": "moviesubs",
  "version": "0.1.4",
  "manifest_version": 2,
  "description": "Watch your favorite movies with subtitles, repeat sentences, skip silences, synchronize",
  "homepage_url": "https://github.com/gignupg/Movie-Subtitles",
  "icons": {
    "16": "icons/movie-subtitles-16.png",
    "48": "icons/movie-subtitles-48.png",
    "128": "icons/movie-subtitles-128.png"
  },
  "permissions": ["storage", "tabs"],
  "browser_action": {
    "default_icon": {
      "19": "icons/movie-subtitles-19.png",
      "38": "icons/movie-subtitles-38.png",
      "48": "icons/movie-subtitles-48.png"
    },
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": ["config.js", "background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "all_frames": true,
      "matches": ["http://*/*", "https://*/*", "file:///*"],
      "match_about_blank": true,
      "css": ["inject.css"],
      "js": ["config.js", "bundle.js"]
    }
  ],
  "web_accessible_resources": ["inject.css", "shadow.css", "icons/*.png"]
}
